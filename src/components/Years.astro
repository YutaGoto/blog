---
const years = [2018, 2019, 2020, 2021, 2022, 2023, 2024, 2025]
---

<div
  class="overflow-auto bg-gray-50 p-5 shadow-lg sm:rounded-xl md:max-w-screen-2xl lg:max-w-sm @dark:bg-gray-800 mb-2"
  transition:name="years"
  transition:animate="fade"
>
  <div class="mb-2 text-lg">投稿年 <i class="ri-calendar-line"></i></div>
  {
    years.map(year => (
      <span
        class="float-left mb-2 mr-2 rounded bg-indigo-500 py-1 px-2 text-sm text-gray-100"
      >
        <a href={`/posts/${year}`} astro-data-history="push">
          {year}
        </a>
      </span>
    ))
  }
</div>
