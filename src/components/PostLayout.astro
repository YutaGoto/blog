---
import "prism-themes/themes/prism-atom-dark.css"

import Layout from "./Layout.astro";
import { Tag } from "./Tag";
import { Bio } from "./Bio";
import { ButtonLink } from "./ButtonLink";
import { FacebookIcon, FacebookShareButton, TwitterIcon, TwitterShareButton } from "react-share";
const { frontmatter } = Astro.props;
---

<Layout>
  <div class="xl:flex xl:space-x-2">
    <div class="xl:flex-grow">
      <article class="blog-post">
        <h1 class="mb-2 text-4xl font-extrabold">
          {frontmatter?.title}
        </h1>
        <p class="text-md mb-2">{frontmatter?.date}</p>
        <div>
          {frontmatter?.tags?.map(tag => (
            <Tag className="mr-1" tag={tag} />
          ))}
        </div>
        <section
          class="mt-3"
        >
        <slot />
        </section>
      </article>
      <div class="mt-5 mb-5">
        <TwitterShareButton
          url={`https://yutagoto.github.io/blog${frontmatter.url}`}
          title={`${frontmatter?.title} - .ごっちの日記`}
          className="m-2"
        >
          <TwitterIcon size="32" round />
        </TwitterShareButton>
        <FacebookShareButton
          url={`https://yutagoto.github.io/blog${frontmatter.url}`}
          title={`${frontmatter?.title} - .ごっちの日記`}
          className="m-2"
        >
          <FacebookIcon size="32" round />
        </FacebookShareButton>
      </div>
    </div>
    <div class="lg:flex-none">
      <Bio />
    </div>
  </div>

  <div
    class="mb-4 mt-4 flex flex-col lg:flex-row lg:justify-between"
    role="navigation"
  >
    <ButtonLink
      text="トップへ戻る"
      iconName="angle-left"
      isLeft={true}
      linkTo="/"
    />
  </div>

  <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
</Layout>

