---
interface Props {
  level: 1 | 2 | 3 | 4 | 5 | 6
  className?: string
}

const { level, className } = Astro.props
---

{level === 1 && <h1 class={className}><slot /></h1>}
{level === 2 && <h2 class={className}><slot /></h2>}
{level === 3 && <h3 class={className}><slot /></h3>}
{level === 4 && <h4 class={className}><slot /></h4>}
{level === 5 && <h5 class={className}><slot /></h5>}
{level === 6 && <h6 class={className}><slot /></h6>}
