---
import Link from "@/components/global/Link.astro"

interface Props {
  text: string
  linkTo: string
  iconName: string
  isLeft?: boolean
}

const { text, linkTo, iconName, isLeft } = Astro.props
---

<Link
  className="mb-1 box-border border border-blue-400 p-2 text-blue-400 hover:bg-blue-400 hover:text-gray-900 lg:mb-0 @dark:border-blue-700 @dark:text-gray-100 @dark:hover:bg-blue-700 @dark:hover:text-gray-100"
  href={linkTo}
>
  {isLeft && <i class={`ri-${iconName}`} />}
  <span>{text}</span>
  {!isLeft && <i class={`ri-${iconName}`} />}
</Link>
