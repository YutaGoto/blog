---
interface Props {
  tags: string[]
  activeTag?: string
}

import Tag from "./Tag.astro"

const { tags, activeTag } = Astro.props
---

<div
  class="overflow-auto bg-gray-50 p-5 shadow-lg sm:rounded-xl md:max-w-screen-2xl lg:max-w-sm @dark:bg-gray-800"
  transition:name="tagList"
  transition:animate="fade"
>
  <div class="mb-2 text-lg">Tags <i class="ri-price-tag-3-line"></i></div>
  {
    tags.map(tag => (
      <Tag
        className="float-left mb-2 mr-2"
        tag={tag}
        active={activeTag === tag}
      />
    ))
  }
</div>
