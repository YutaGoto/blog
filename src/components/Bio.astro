---
import "./fontawesome"
// import { FontAwesomeIcon } from "@fortawesome/react-fontawesome"
// import {brands} from "@fortawesome/fontawesome-svg-core/import.macro"
import profile from "../../public/profile.json"
---

<div
  id="bio"
  class="mb-2 bg-gray-50 p-5 shadow-lg dark:bg-gray-800 sm:rounded-xl"
>
  <div class="flex space-x-4">
    <div class="flex-none">
      <img
        class="bio-avatar h-48 w-48 object-contain"
        src="/blog/assets/images/profile-pic.png"
        alt="ProfilePicture"
      />
    </div>

    <div class="flex flex-1 flex-col space-y-3">
      <div>
        <p class="mb-2 text-3xl">{profile.author.name}</p>
        <p class="text-xl">{profile.author.summary}</p>
      </div>
      <div class="flex flex-1 space-x-6">
        {
          profile.social?.map(s => (
            <a
              href={s.url}
              class="object-bottom"
              target="_blank"
              rel="noreferrer noopener"
            >
              <span class="icon">
                <i class={`fab fa-${s?.name} fa-lg`} />
              </span>
            </a>
          ))
        }
      </div>
    </div>
  </div>
</div>
