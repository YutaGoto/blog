---
import profile from "../../public/profile.json"
---

<div
  id="bio"
  class="mb-2 bg-gray-50 p-5 shadow-lg dark:bg-gray-800 sm:rounded-xl md:max-w-screen-2xl lg:max-w-sm"
  transition:name="bio"
  transition:animate="fade"
>
  <div class="max-w-fit">
    <img
      class="bio-avatar h-48 w-48 rounded-full object-contain"
      src="/blog/assets/images/profile-pic.png"
      alt="ProfilePicture"
    />

    <div class="flex-none space-y-3 pt-3">
      <div>
        <p class="mb-2 text-3xl">{profile.author.name}</p>
        <p class="break-words text-xl">{profile.author.summary}</p>
      </div>
      <div class="flex flex-1 space-x-2">
        {
          profile.social?.map(s => (
            <a
              href={s.url}
              class="object-bottom"
              target="_blank"
              rel="noreferrer noopener"
            >
              <i class={`ri-${s?.name}-fill ri-3xl`} />
            </a>
          ))
        }
      </div>
    </div>
  </div>
</div>
